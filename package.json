{
  "private": true,
  "productName": "hdl_editor",
  "version": "1.0.0",
  "main": "app/js/main.js",
  "license": "UNLICENSED",
  "scripts": {
    "start": "cd src/Main && yarn webpack --port free -w --config webpack.config.js -w",
    "build": "cd src/Main && yarn webpack --port free --config webpack.config.js",
    "launch": "electron . -w",
    "test": "yarn webpack --port free --config webpack.test.config.js && mocha \"./test/**/*test-*.js\" --colors",
    "test-dev": "mocha \"./test/test-GUI.js\" --colors",
    "test-non-gui": "mocha \"./test/test-non-GUI.js\" --colors",
    "coverage": "cross-env NODE_ENV=test nyc npm run test",
    "pack-win": "electron-packager . electron-hdl-editor-windows --overwrite --platform=win32 --arch=ia32  --prune=true --out=build --version-string.ProductName=\"HDL Editor\" --icon=\"./icon.ico\"",
    "pack-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --prune=true --out=build --icon=\"./icon.ico\"",
    "pack-linux": "electron-packager . electron-hdl-editor-linux --overwrite --asar=true --platform=linux --arch=x64 --prune=true --out=build --icon=\"./icon.ico\"",
    "release": "electron-packager . --out release --overwrite"
  },
  "keywords": [
    "HDL"
  ],
  "author": "Lei Wang (Wilson)",
  "dependencies": {
    "@babel/runtime": "^7.4.3",
    "core-js": "^3.0.1",
    "jointjs": "^2.2.1",
    "monaco-editor": "^0.17.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-transform-runtime": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.0",
    "@types/mocha": "^5.2.6",
    "babel-loader": "^8.0.5",
    "babel-plugin-istanbul": "^5.1.4",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "electron": "^4.1.3",
    "electron-chromedriver": "^6.0.0-beta.3",
    "electron-packager": "^13.1.1",
    "fable-compiler": "^2.2.3",
    "fable-loader": "^2.1.5",
    "istanbul-instrumenter-loader": "^3.0.1",
    "loglevel": "^1.4.1",
    "mocha": "^6.1.4",
    "mocha-junit-reporter": "^1.22.0",
    "monaco-editor-webpack-plugin": "^1.7.0",
    "nyc": "^14.1.1",
    "spectron": "^5.0.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  }
}
